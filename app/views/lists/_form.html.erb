<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="row">
		<div class="small-12 large-12 columns">
	  		<%= f.label :name %>
	    	<%= f.text_field :name %>
		</div>
	</div>
	
	<div class="row">
		<div class="small-12 large-12 columns">
			<h2>Columns</h2>
		</div>
	</div>
	
	<%= f.fields_for :columns do |columns_form| %>
		<div class="row">
			<div class="small-12 large-12 columns">
				<%= columns_form.label :name %>
				<%= columns_form.text_field :name %>
			</div>
		</div>
	<% end %>
	
	<div class="row">
		<div class="small-12 large-12 columns">
			<hr>
			<ul class="inline-list">
				<li><%= f.submit class: "small button"%></li>
				<li><%= link_to 'Cancel', lists_path %></li>
			</ul>
		</div>
	</div>
<% end %>
